.wrap {
    height: 100vh;
    width: 100vw;
}

.img {
    width: 100%;
    display: flex;
}

.con {
    padding: 30rpx;
}

.process_title {
    font-size: 40rpx;
    font-weight: 600;
}

.process_con {
    display: flex;
    justify-content: space-between;
    padding: 30rpx 0;
}

.process_chunk {
    height: 8rpx;
    width: calc(100% / 3 - 40rpx);
    border-radius: 8rpx;
}

.process_active {
    background: #b5b58d;
}

.process_disabled {
    background: #ececec;
}

.pub_btn {
    position: fixed;
    right: 30rpx;
    bottom: 50rpx;
    display: flex;
}

.pub_pre {
    width: 120rpx;
    height: 120rpx;
    background: #b5b58d;
    border-radius: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
}

.pub_pre_img {
    width: 46rpx;
    height: 24rpx;
}

.pub_img {
    width: 120rpx;
    height: 120rpx;
    margin-left: 30rpx;
}