.top {
    position: fixed;
    top: 0;
    background: #000;
    width: 100vw;
    z-index: 2;
}

.header {
    width: 100vw;
    position: fixed;
    z-index: 2;
    background: #000;
    display: flex;
    flex-direction: row;
    overflow: hidden;
    box-shadow: 0px 5rpx 8rpx #000;

}

.nav {
    display: flex;
    flex-direction: row;
    background: #000;
    width: 100vw;
    
}

.nav_con {
    flex: 1;
    display: flex;
    align-items: center;
    padding-left: 20rpx!important;
    box-shadow: 0px 5rpx 8rpx #000;
}

.nav_icon {
    display: flex;
    align-items: center;
    justify-content: center;
}

.nav_logo {
    border-radius: 100%;
    display: flex;
}

.nav_ipt {
    flex: 1;
    padding-right: 30rpx;
    border: 1rpx solid #eeeeee;
    border-radius: 100rpx;
    display: flex;
    align-items: center;
    margin-left: 10rpx;
}

.nav_ipt_search {
    margin: 0 14rpx;
}

.nav_ipt_container {
    flex: 1;
    font-size: 24rpx;
    color: #fff;
}