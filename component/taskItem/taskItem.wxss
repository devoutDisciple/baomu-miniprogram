.task {
    padding: 40rpx 20rpx;
    background: #fff;
    width: calc(100% - 40rpx);
    border-radius: 40rpx;
}

.task_desc {
    border-bottom: 2rpx solid #ededed;
    display: flex;
    padding-bottom: 30rpx;
}

.task_desc_left {
    width: 160rpx;
    height: 200rpx;
}

.task_desc_right {
    flex: 1;
    padding-left: 20rpx;
}

.task_title {
    display: flex;
    height: 50rpx;
    align-items: flex-start;
}

.task_title_name {
    flex: 1;
    font-size: 36rpx;
    font-weight: 600;
    max-width: 295rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.task_title_money {
    width: 200rpx;
    font-size: 24rpx;
    color: #999999;
    text-align: right;
}

.task_title_money_txt {
    font-size: 36rpx;
    color: #333;
    font-weight: 600;
}

.task_desc_item {
    display: flex;
    align-items: flex-end;
    height: 50rpx;
}

.task_desc_item_txt {
    max-width: calc(100vw - 280rpx);
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    font-size: 28rpx;
}

.task_footer {
    margin-top: 30rpx;
    display: flex;
    align-items: center;
}

.person_photo {
    height: 60rpx;
    width: 60rpx;
}

.person_name {
    width: 400rpx;
    padding-left: 20rpx;
    max-width: 380rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.person_btn {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.person_btn_txt {
    padding: 18rpx 40rpx;
    border-radius: 50rpx;
    background: #000;
    color: #fff;
}