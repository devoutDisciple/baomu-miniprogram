.img {
    width: 100%;
    height: 100%;
    overflow: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 10rpx;
    position: relative;
}

.fix_height {
    height: 100%;
}

.fix_width {
    width: 100%;
}

.video_play_container {
    position: absolute;
    height: 80rpx;
    width: 80rpx;
    left: calc(50% - 40rpx);
    top: calc(50% - 40rpx);
    background: #333;
    opacity: 0.3;
    border-radius: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
}

.video_play_img {
    height: 60rpx;
    width: 60rpx;
}