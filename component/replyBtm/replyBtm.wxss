.btm {
    position: fixed;
    bottom: 0;
    left: 0;
    background: #fff;
    height: 160rpx;
    width: 100vw;
    box-shadow: 0px 7rpx 23rpx #666;
    display: flex;
    align-items: center;
}

.con {
    flex: 1;
    height: 80rpx;
    display: flex;
}

.btm_left {
    margin-left: 30rpx;
    flex: 1;
    display: flex;
    border: 1rpx solid #ededed;
    align-items: center;
    border-radius: 50rpx;
}

.ipt {
    height: 80rpx;
    padding-left: 30rpx;
    flex: 1;
}

.icon_img {
    height: 100%;
    display: flex;
    align-items: center;
}

.icon {
    height: 40rpx;
    width: 40rpx;
    margin-right: 20rpx;
    margin-left: 10rpx;
}

.btm_right {
    margin-left: 30rpx;
    display: flex;
    align-items: center;
}

.btm_right .icon {
    margin-right: 30rpx;
}