.list {
    display: flex;
    height: 100rpx;
    padding: 40rpx 20rpx;
    border-bottom: 1rpx solid #fbfbfb;
    overflow: hidden;
    font-size: 30rpx;
}

.photo {
    width: 120rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

.photo_img {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
}

.chunk {
    flex: 1;
}

.chunk_title {
    height: 50rpx;
    display: flex;
    line-height: 50rpx;
}

.chunk_title_name {
    flex: 1;
    color: #333333;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
    margin-right: 40rpx;
}

.chunk_title_time {
    font-size: 26rpx;
    color: #999999;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.chunk_content {
    height: 50rpx;
    display: flex;
    line-height: 50rpx;
}

.chunk_content_txt {
    flex: 1;
    line-height: 66rpx;
    font-size: 28rpx;
    margin-right: 40rpx;
    color: #999;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 1;
}

.photo_con {
    border-radius: 100%;
    width: 100rpx;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.photo_con1 {
    background: #000;
}

.photo_con2 {
    background: #e2cb99;
}

.photo_con3 {
    background: #b5b58d;
}

.photo_icon {
    width: 45rpx;
    height: 50rpx;
}

.photo_icon3 {
    width: 55rpx;
    height: 45rpx;
}



.chunk_content_num {
    font-size: 20rpx;
    height: 44rpx;
    width: 44rpx;
    text-align: center;
    line-height: 44rpx;
    background: #fa5253;
    border-radius: 100%;
    color: #fff;
    margin-top: 11rpx;
}