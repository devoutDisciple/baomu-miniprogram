.wrap {
    height: 100vh;
    width: 100vw;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    position: relative;
    background: #000;
}

.loading {
    position: absolute;
    width: 100vw;
    left: 0;
    top: 0;
    z-index: 10;
    display: flex;
    align-items: center;
    justify-content: center;
}

.background_img {
    width: 100%;
}

.con {
    position: absolute;
    width: 100vw;
    height: 100vh;
}

.intro {
    position: absolute;
    min-height: 300rpx;
    width: 100vw;
    left: 0;
    top: 100px;
    display: flex;
    flex-direction: column;
    overflow: hidden;
}

.person {
    display: flex;
    flex-direction: row;
    height: 144rpx;
    margin: 0 40rpx;
}

.person_photo {
    width: 144rpx;
    height: 144rpx;
}

.person_msg {
    flex: 1;
    margin-left: 20rpx;
}

.person_mgs_profession {
    height: 72rpx;
    display: flex;
}

.person_mgs_profession_name {
    min-width: 40rpx;
    display: flex;
    align-items: center;
    font-size: 38rpx;
    color: #fff;
}

.person_mgs_profession_level {
    flex: 1;
    display: flex;
    align-items: center;
    margin-left: 15rpx;
}

.person_mgs_profession_level_photo {
    height: 36rpx;
    width: 36rpx;
}

.person_mgs_name {
    height: 72rpx;
    display: flex;
    align-items: center;
    font-size: 34rpx;
    color: #5c5c5c;
}

.data {
    height: 90rpx;
    display: flex;
    justify-content: space-between;
    margin: 0 40rpx;
    margin-top: 60rpx;
}

.data_chunk {
    font-weight: 600;
}

.data_chunk_txt {
    height: 50rpx;
    color: #999;
    text-align: center;
}

.data_chunk_num {
    height: 40rpx;
    font-size: 36rpx;
    color: #fff;
    text-align: center;
}

.desc {
    margin: 50rpx 40rpx;
    color: #fff;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    word-break: break-all;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}

.detail {   
    flex: 1;
    background: #f9f9f9;
    padding: 0 20rpx;
    width: calc(100vw - 40rpx);
    overflow: hidden;
}

::-webkit-scrollbar {
    display: none;
  }

.opt {
    background: #fff;
    margin-top: 40rpx;
    padding: 40rpx;
    border-radius: 20rpx;
    box-shadow: 0rpx 0rpx 13rpx 4rpx #f3f3f3;
}

.work_msg {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
}

.opt_chunk {
    display: flex;
    flex-direction: column;
    justify-content: center;
}

.opt_chunk_icon {
    display: flex;
    align-items: center;
    justify-content: center;
}

.opt_chunk_img {
    width: 54rpx;
    height: 54rpx;
}

.opt_chunk_txt {
    margin-top: 20rpx;
}

.btm {
    height: 60rpx;
    width: 100%;
}

.service_btn {
    position: absolute;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0;
}
