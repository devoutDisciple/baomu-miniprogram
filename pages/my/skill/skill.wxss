.invitate_btn {
    position: fixed;
    bottom: 40rpx;
    left: 40rpx;
    width: calc(100vw - 80rpx);
    height: 90rpx;
    z-index: 111;
    background: #000;
    color: #fff;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 34rpx;
}

.bg {
    width: 100vw;
    background: #000;
    height: 450rpx;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
}

.bg_process {
    background: #b5b58d;
}

.bg_fail {
    background: #f0bcc6;
}

.bg_success {
    background: #55bfb5;
}

.bg_desc {
    margin-top: 200rpx;
    height: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #fff;
    font-size: 26rpx;
}

.con {
    position: absolute;
    top: 300rpx;
    width: calc(100vw - 40rpx);
    min-height: 300rpx;
    z-index: 20;
    margin-left: 20rpx;
}

.chunk {
    background: #fff;
    padding: 50rpx 30rpx;
    border-radius: 20rpx;
}

.title {
    display: flex;
}

.title_left {
    flex: 1;
}

.title_right {
    width: 100rpx;
}

.title_icon_bg {
    background: #000;
    width: 80rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 100%;
}

.title_icon {
    width: 35rpx;
    height: 35rpx;
}

.chunk2 {
    margin-top: 40rpx;
}

.skill {
    margin-top: 40rpx;
    padding-top: 10rpx;
}

.skill_item {
    display: flex;
    margin-bottom: 20rpx;
    margin-top: 40rpx;
}

.skill_item_name {
    flex: 1;
}

.skill_item_grade {
    width: 100rpx;
    text-align: right;
    font-size: 34rpx;
    color: #000;
}

.skill_delete {
    display: flex;
    background: red;
    color: #fff;
    height: 100%;
    width: 100rpx;
    justify-content: center;
    align-items: center;
}

.chunk_title {
    font-size: 34rpx;
    margin-bottom: 10rpx;
}

.chunk_desc {
    margin-top: 10rpx;
    font-size: 26rpx;
    color: #666;
}

.photo_desc {
    display: flex;
    align-items: center;
    justify-content: flex-start;
    font-size: 26rpx;
    color: #666;
    margin-top: 30rpx;
}

.ipt_chunk {
    padding: 40rpx 0;
    border-bottom: 1rpx solid #ececec;
}

.picker {
    position: absolute;
    width: 100%;
    align-items: center;
    height: 40rpx;
    left: 0;
    top: 0;
}

.picker_init {
    color: #6a6a6a;
}

.picker_value {
    color: #333;
}

.empty {
    height: 200rpx;
}