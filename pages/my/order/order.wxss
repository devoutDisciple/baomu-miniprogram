.wrap {
    width: 100vw;
    height: 100vh;
    background: #f7f7f7;
}

.chunk {
    background: #fff;
    margin-top: 20rpx;
    border-radius: 20rpx;
    padding: 40rpx 20rpx;
}

.empty {
    display: flex;
    flex-direction: column;
    width: 100vw;
    height: 100vh;
    align-items: center;
    justify-content: center;
    color: #6a6a6a;
}

.tab {
    width: 100vw;
    background: #fff;
    height: 100rpx;
    display: flex;
}

.tab_work {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.tab_text {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    margin-top: 14rpx;
    font-size: 30rpx;
}

.tab_text_select {
    font-weight: 600;
    font-size: 34rpx;
}

.tab_border {
    height: 5rpx;
    width: 74rpx;
    background: #333;
    margin-top: 10rpx;
    border-radius: 10rpx;
    position: absolute;
    bottom: 10rpx;
}

.con {
    width: calc(100vw - 40rpx);
    height: calc(100vh - 100rpx);
    padding: 0 20rpx;
}

.evaluate {
    padding: 40rpx;
}

.evaluate_title {
    display: flex;
    align-items: center;
    font-size: 32rpx;
    color: #666;
}

.evaluate_img {
    width: 60rpx;
    height: 60rpx;
    margin-right: 20rpx;
}

.evaluate_time {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    align-items: center;
    font-size: 28rpx;
}

.evaluate_grade {
    margin-top: 10rpx;
}

.evaluate_con {
    padding: 40rpx 0;
}