<view class="person">
    <header text="" showBack="true" text="" showTop topColor="{{ type === 2 ? '#b5b58d' : type === 3 ? '#f0bcc6' : type=== 4 ? '#55bfb5' : '#000' }}"/>
    <scroll-view class="wrap" scroll-y="{{true}}" enhanced="{{true}}" show-scrollbar="{{false}}"> 
        <view class="bg {{ type === 2 ? 'bg_process' : type === 3 ? 'bg_fail' : type=== 4 ? 'bg_success' : ''}}">
            <block wx:if="{{type === 2}}">
                <view class="bg_desc">正在审核中</view>
            </block>
            <block wx:if="{{type === 3}}">
                <view class="bg_desc">认证失败请重新上传</view>
            </block>
            <block wx:if="{{type === 4}}">
                <view class="bg_desc">认证成功</view>
            </block>
        </view>
        <view class="con">
            <view class="chunk" data-type="1" bindtap="{{type === 1 || type === 3 ? 'onChooseImg' : ''}}">
                <view class="chunk_title">毕业院校认证</view>
                <view class="ipt_chunk">
                    <input placeholder="姓名" bindblur="onBlurPrice"/>
                </view>
                <view class="ipt_chunk">
                    <input placeholder="身份证号码" bindblur="onBlurPrice"/>
                </view>
                <view class="ipt_chunk">
                    <input placeholder="电话号码" bindblur="onBlurPrice"/>
                </view>
                <view class="ipt_chunk">
                    <input placeholder="学校名称" bindblur="onBlurPrice"/>
                </view>
                <view class="ipt_chunk">
                    <input placeholder="毕业时间" bindblur="onBlurPrice"/>
                </view>
                <view class="ipt_chunk">
                    <select-item>
                        <picker class="picker" bindchange="onPickFoods" range="{{isYesList}}">
                            <block wx:if="{{selectFoods}}">
                                <view class="picker_value">
                                    {{selectFoods}}
                                </view>
                            </block>
                            <block wx:else>
                                <view class="picker_init">
                                    学习形式
                                </view>
                            </block>
                        </picker>
                    </select-item>
                </view>
                <view class="photo_con">
                    <block wx:if="{{idcard1}}">
                        <image class="photo_img" src="{{idcard1}}" />
                    </block>
                    <block wx:else>
                        <image class="photo_img" src="/asserts/public/shenfen1.png" />
                    </block>
                </view>
                <view class="photo_desc">毕业证照片上传(请务必上传真实信息平台会人工审核)</view>
            </view>
            <view class="chunk chunk2" data-type="1" bindtap="{{type === 1 || type === 3 ? 'onChooseImg' : ''}}">
                <view class="chunk_title">获奖认证</view>
                <view class="ipt_chunk">
                    <input placeholder="证书颁发机构" bindblur="onBlurPrice"/>
                </view>
                <view class="ipt_chunk">
                    <input placeholder="证书名称" bindblur="onBlurPrice"/>
                </view>
                <view class="ipt_chunk">
                    <input placeholder="名次" bindblur="onBlurPrice"/>
                </view>
                <view class="ipt_chunk">
                    <select-item>
                        <picker class="picker" bindchange="onPickFoods" range="{{isYesList}}">
                            <block wx:if="{{selectFoods}}">
                                <view class="picker_value">
                                    {{selectFoods}}
                                </view>
                            </block>
                            <block wx:else>
                                <view class="picker_init">
                                    证书颁发时间
                                </view>
                            </block>
                        </picker>
                    </select-item>
                </view>
                <view class="photo_con">
                    <block wx:if="{{idcard2}}">
                        <image class="photo_img" src="{{idcard2}}" />
                    </block>
                    <block wx:else>
                        <image class="photo_img" src="/asserts/public/shenfen1.png" />
                    </block>
                </view>
                <view class="photo_desc">获奖证书照片上传</view>
            </view>
        </view>
    </scroll-view>
    <block wx:if="{{type === 1 || type === 3}}">
        <view class="invitate_btn" bindtap="onSend">保存并提交审核</view>
    </block>
    <block wx:if="{{dialogShow}}">
        <tip-dialog
            bindOnClose="onCloseDialog"
            src="{{dialogDetail.src}}" 
            title="{{dialogDetail.title}}" 
            desc="{{dialogDetail.desc}}"/> 
    </block>
</view>