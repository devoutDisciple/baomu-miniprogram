<view class="wrap">
    <scroll-view class="con" scroll-y="{{true}}">
        <view class="con_my">
            <comment detail="{{currentReply}}" type="reply1"/>
        </view>
        <view class="con_other">
            <block wx:if="{{replyList && replyList.length !== 0}}">
                <comment 
                    wx:key="id" 
                    type="reply2" 
                    detail="{{item}}" 
                    wx:for="{{replyList}}" 
                    imgList="{{item.img_urls || []}}" />
            </block>
            <block wx:else>
                <empty-img />
            </block>
        </view>
        <btm-empty />
    </scroll-view>
    <reply-btm bindTapGoods="onTapGoodsCallback" bindCallback="onRepluSuccess" hadGoods="{{currentReply.hadGoods}}" type="{{2}}" contentId="{{contentId}}" commentId="{{commentId}}" ownerId="{{currentReply.userId}}"/>
