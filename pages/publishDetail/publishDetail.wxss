.wrap {
    height: 100vh;
    width: 100vw;
    background: #f7f7f7;
    position: relative;
}

.con {
    height: 100vh;
    width: 100vw;
    position: relative;
    background: #fff;
}

.invitate_btn {
    position: fixed;
    bottom: 40rpx;
    left: 40rpx;
    width: calc(100vw - 80rpx);
    height: 100rpx;
    z-index: 111;
    background: #000;
    color: #fff;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
}

.img {
    width: 100%;
}

.content {
    width: calc(100vw - 80rpx);
    margin-left: 20rpx;
    padding: 20rpx;
    font-size: 30rpx;
    color: #666666;
    padding-bottom: 200rpx;
}

.title {
    font-size: 40rpx;
    color: #000;
}

.price {
    margin: 20rpx 0;
    margin-bottom: 40rpx;
}

.desc {
    padding-top: 60rpx;
    border-top: 1rpx solid #f7f7f7;
}

.chunk {
    display: flex;
    margin-top: 60rpx;
    align-items: center;
}

.icon {
    margin-right: 20rpx;
}

.icon1, .icon3, .icon5 {
    width: 40rpx;
    height: 40rpx;
}

.icon4 {
    width: 40rpx;
    height: 33rpx;
}

.icon2{
    width: 35rpx;
    height: 45rpx;
}