.wrap {
    height: 100vh;
    width: 100vw;
    background: #f7f7f7;
    position: relative;
}

.wrap ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.bg_con {
    position: relative;
    left: 0;
    top: 0;
    background: #000;
    width: 100%;
    height: 300rpx;
    display: flex;
    justify-content: flex-end;
    margin-bottom: 100rpx;
}

.tab {
    width: calc(100vw - 40rpx);
    position: absolute;
    left: 20rpx;
    bottom: -80rpx;
    background: #fff;
    height: 180rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 20rpx;
}

.search {
    margin-top: 500rpx;
    height: 100rpx;
    background: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    width: calc(100vw - 40rpx);
    margin-left: 20rpx;
    border-bottom-left-radius: 20rpx;
    border-bottom-right-radius: 20rpx;
}

.person_con {
    padding: 0 20rpx;
}

.person_item {
    margin-bottom: 20rpx;
}

.empty {
    height: 500rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 40rpx;
    color: #8a8a8a;
}

.empty_txt {
    height: 300rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #8a8a8a;
    font-size: 34rpx;
    margin-bottom: 200rpx;
}

.invitate_btn {
    position: fixed;
    bottom: 10rpx;
    left: 40rpx;
    width: calc(100vw - 80rpx);
    height: 100rpx;
    z-index: 111;
    background: #000;
    color: #fff;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 38rpx;
    margin: 50rpx 0;
}

.production_empty {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    color: #6a6a6a;
    padding: 30rpx;
}

.production_empty_img {
    width: 294rpx;
    height: 243rpx;
    margin-bottom: 20rpx;
}
