.wrap {
    height: 100vh;
    width: 100vw;
    background: #f8f9fa;
    padding-top: 20rpx;
}

.con {
    min-height: 100vh;
    background: #fff;
    padding: 0 30rpx;
}

.chunk {
    display: flex;
    padding: 60rpx 10rpx;
    border-bottom: 1rpx solid #ececec;
    color: #6a6a6a;
    align-items: center;
}

.chunk_lable {
    width: 260rpx;
    display: flex;
    align-items: center;
}

.chunk_value {
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.photo {
    width: 140rpx;
    height: 140rpx;
    border-radius: 100%;
}

.chunk_con {
    display: flex;
    align-items: center;
}


.label {
    width: 120rpx;
}

.value {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    padding: 0 20rpx;
    align-items: center;
}

.value_ipt {
    width: 100%;
    height: 100rpx;
    text-align: right;
}

.value_img {
    height: 140rpx;
    width: 140rpx;
    border-radius: 100%;
}

.picker {
    width: 100%;
    height: 100rpx;
    
}

.picker_init {
    color: #6a6a6a;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.picker_value {
    color: #333;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.icon {
    height: 30rpx;
    width: 15rpx;
}