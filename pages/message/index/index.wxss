.message {
    font-size: 34rpx;
    overflow: hidden;
    height: 100vh;
    width: 100vw;
}

.message ::-webkit-scrollbar {
    width: 0;
    height: 0;
    color: transparent;
}

.empty {
    margin-top: 100rpx;
}

.msg_delete {
    display: flex;
    background: red;
    color: #fff;
    height: 100%;
    width: 100rpx;
    justify-content: center;
    align-items: center;
}