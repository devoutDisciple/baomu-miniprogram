.wrap {
    height: 100vh;
    width: calc(100vw - 40rpx);
    padding: 20rpx;
}

.chunk {
    display: flex;
    padding: 40rpx 20rpx;
    border-bottom: 1rpx solid #ededed;
    align-items: center;
    position: relative;
}

.chunk2 {
    padding: 40rpx 20rpx;
    border-bottom: 1rpx solid #ededed;
}

.chunk_con {
    display: flex;
    align-items: center;
}

.label {
    width: 120rpx;
}

.value {
    flex: 1;
    display: flex;
    justify-content: flex-end;
    padding: 0 20rpx;
    align-items: center;
}

.value_ipt {
    width: 100%;
    height: 100rpx;
    text-align: right;
}

.value_img {
    height: 140rpx;
    width: 140rpx;
    border-radius: 100%;
}

.picker {
    width: 100%;
    height: 100rpx;
    
}

.picker_init {
    color: #6a6a6a;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.picker_value {
    color: #333;
    width: 100%;
    height: 100rpx;
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.icon {
    height: 30rpx;
    width: 15rpx;
}

.desc {
    width: 100%;
    margin-top: 40rpx;
}

.footer {
    display: flex;
    align-items: center;
    justify-content: center;
}

.edit_btn {
    width: calc(100vw - 80rpx);
    height: 100rpx;
    background: #000;
    color: #fff;
    border-radius: 20rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 38rpx;
    margin: 50rpx 0;
}

.bg_img {
    margin-top: 40rpx;
    width: 100%;
}

.empty {
    height: 200rpx;
}